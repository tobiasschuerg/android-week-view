root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 140
tab_width = 4

[*.{kt,kts}]
# Disable function naming rule for Compose functions
ktlint_standard_function-naming = disabled
# Allow PascalCase for Composable functions
ktlint_standard_composing-properties = disabled

[*.{json,webmanifest}]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
